<p id="notice"><%= notice %></p>

<h1>Your Links</h1>

    <% @links.each do |link| %>
      <div class="row">
        <div class="col-lg-7"><b><%= link_to link.slug, link.slug %></b> -- redirects to --> <b><%= link.url %></b></div>
        <div class="col-lg-3">Used <%= pluralize(link.counter, 'time') %></div>
        <div class="col-lg-2">
          <%= link_to 'Edit', edit_link_path(link) %> |
          <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>

    <% end %>
<br>

<%= link_to 'New Link', new_link_path, class: 'btn btn-primary' %>
